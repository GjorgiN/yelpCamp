<% layout('layouts/boilerplate') %>

    <div class="row mt-5 mb-3">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img style="width: 12rem; border-radius: 50%;" class="card-img-top img-thumbnail mx-auto my-2" crossorigin src="https://res.cloudinary.com/dajdyiuip/image/upload/w_300/v1667847550/YelpCamp/users/julian-wan-WNoLnJo7tS8-unsplash_jnlwyi.jpg" alt="">
                <h4 class="card-title text-center mt-2">Update User</h4>
                <div class="card-body">
                    <form enctype="multipart/form-data" method="POST" action="/userupdate" novalidate class="validate-form">
                        <div class="input-group mb-3">
                            <label style="height: 2rem;" class="input-group-text my-0 py-1" for="userImage">New profile image?</label>
                            <input name="userImage" style="height: 2rem;" accept="image/*" type="file" class="form-control my-0 py-1" id="userImage">
                        </div>
                        <div class="d-flex align-items-center justify-content-start mb-2">
                            <input type="checkbox" name="updateUsername" id="updateUsername">
                            <label class="ms-2" for="updateUsername">Update username?</label>
                        </div>
                        <section id="updateUsernameSection" class="d-none">
                            <div class="col mb-2 d-flex align-items-center justify-content-start">
                                <label for="currentUsername" class="form-label me-1 my-auto labelDisabledInput">Current
                                    username:</label>
                                <input disabled value="<%= currentUser.username %>" type="text"
                                    class="form-control disabledInput" id="currentUsername" name="currentUsername"
                                    aria-describedby="currentUsername">
                            </div>
                            <div class="mb-3">
                                <label for="username" class="form-label d-none">New username:</label>
                                <input required disabled type="text" placeholder="Your new username"
                                    class="form-control" id="username" name="username" aria-describedby="username">
                                <div class="valid-feedback">Looks good!</div>
                            </div>
                        </section>

                        <div class="d-flex align-items-center justify-content-start mb-2">
                            <input type="checkbox" name="updateEmail" id="updateEmail">
                            <label class="ms-2" for="updateEmail">Update Email?</label>
                        </div>
                        <section id="updateEmailSection" class="d-none">
                            <div class="col mb-2 d-flex justify-content-start align-items-center">
                                <label for="currentEmail" class="form-label my-auto me-1 labelDisabledInput">Current
                                    email:</label>
                                <input disabled value="<%= currentUser.email %>" type="email"
                                    class="form-control disabledInput" id="currentEmail" name="currentEmail"
                                    aria-describedby="currentEmail">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label d-none">New email:</label>
                                <input disabled required placeholder="Your new email" type="email" class="form-control"
                                    id="email" name="email" aria-describedby="email">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </section>

                        <div class="d-flex align-items-center justify-content-start mb-2">
                            <input type="checkbox" name="updatePassword" id="updatePassword">
                            <label class="ms-2" for="updatePassword">Update Password?</label>
                        </div>

                        <section class="d-none" id="updatePasswordSection">
                            <div class="mb-1">
                                <label for="currentPassword" class="d-none form-label">Current password:</label>
                                <input disabled required placeholder="Your current password" type="password"
                                    class="form-control" id="currentPassword" name="currentPassword"
                                    aria-describedby="currentPassword">
                            </div>

                            <div class="mb-1">
                                <label for="newPassword" class="d-none form-label">New password:</label>
                                <input disabled required placeholder="Your new password" type="password"
                                    class="form-control" id="newPassword" name="newPassword"
                                    aria-describedby="newPassword">

                            </div>
                            <div class="my-1">
                                <label for="repeatNewPassword" class="d-none form-label">Repeat new password:</label>
                                <input disabled required placeholder="Repeat your new password" type="password"
                                    class="form-control" id="repeatNewPassword" name="repeatNewPassword"
                                    aria-describedby="repeatNewPassword">
                                <div id="passwords-match"
                                    class="d-none text-success d-flex justify-content-start align-items-center mt-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="1.4rem" height="1.4rem"
                                        fill="currentColor" class="bi bi-check-square" viewBox="0 0 16 16">
                                        <path
                                            d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                        <path
                                            d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.235.235 0 0 1 .02-.022z" />
                                    </svg>
                                    <span class="ms-1">Matching password</span>
                                </div>
                                <div id="passwords-not-match"
                                    class="d-none text-danger d-flex justify-content-end align-items-center mt-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="1.4rem" height="1.4rem" fill="currentColor"
                                        class="bi bi-x-square" viewBox="0 0 16 16">
                                        <path
                                            d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                        <path
                                            d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                    </svg>
                                    <span class="ms-1">Password not matching</span>
                                </div>
                            </div>

                        </section>

                        <button disabled id="submitUserUpdates" class="btn btn-success w-100">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/javascripts/updateUserFormOpts.js"></script>