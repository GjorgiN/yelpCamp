<% layout('layouts/boilerplate') %>
    <h1 class="mt-3">All Campgrounds</h1>
    
        <% for(const camp of campgrounds) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= camp.images.length ? camp.images[0].url : 'https://res.cloudinary.com/dajdyiuip/image/upload/v1666284343/YelpCamp/h5ija4zucoillhhkjwli.jpg' %>" alt="" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= camp.title %></h5>
                            <p class="card-text"><%= camp.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= camp.location %></small> 
                            </p>
                            <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
