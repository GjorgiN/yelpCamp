<% layout('layouts/boilerplate') %>
<div class="mt-3 mb-2" id="cluster-map"></div>
        <% for(const camp of campgrounds) { %>
            <div class="card mb-3 bg-light">
                <div class="row align-items-center">
                    <div class="col-md-6 col-lg-5">
                        <img src="<%= camp.images.length ? camp.images[0].url : 'https://res.cloudinary.com/dajdyiuip/image/upload/v1666285366/YelpCamp/eppcarabpagkxw3brnbn.jpg' %>" alt="" class="img-fluid" crossorigin>
                    </div>
                    <div class="col-md-6 col-lg-7">
                        <div class="card-body">
                            <h5 class="card-title"><%= camp.title %></h5>
                            <p style="text-align: justify;" class="card-text"><%= camp.description %></p>
                            <div class="row d-flex align-items-center">
                                <div class="col-12 col-lg-5 col-xl-12 mb-1">
                                    <p class="card-text"><small class="text-muted"><%= camp.location %></small></p>
                                </div>
                                <div class="col-12 col-lg-7 col-xl-12">
                                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary px-2">View <%= camp.title %></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
        <script>
            const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
            const campgrounds = '<%- JSON.stringify({features: campgrounds}) %>';
        </script>
        <script src="/javascripts/clusterMap.js"></script>
